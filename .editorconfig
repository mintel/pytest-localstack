# http://editorconfig.org

root = true

[*]
indent_size = 4
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,md}]
indent_style = space

[.coveragerc]
indent_style = tab

[*.{ini,cfg,bat}]
indent_style = tab

[Makefile]
indent_style = tab

[.bumpversion.cfg]
indent_style = tab
# .bumpversion.cfg gets rewritten by Python ConfigParser.
# Ignore any changes to whitespace.
trim_trailing_whitespace = false
insert_final_newline = false

[*.{yml,yaml}]
indent_style = space
indent_size = 2
